<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Manage data">
        <!--  Import/Export section  -->
            <Preference
                app:key="import_data"
                app:title="Import"
                app:summary="Import data from a backup file">
            </Preference>
            <Preference
                app:key="export_data"
                app:title="Export"
                app:summary="Export data to a backup file">
            </Preference>
    </PreferenceCategory>

    <PreferenceCategory app:title="More info">

        <PreferenceScreen
            app:title="About us"
            app:fragment="com.android.settings.about.AboutSettings">
        </PreferenceScreen>


    </PreferenceCategory>

</PreferenceScreen>